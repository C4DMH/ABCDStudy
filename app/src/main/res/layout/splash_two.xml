        android:layout_marginTop="20dp"
        android:lineSpacingExtra="5sp"
        android:text="The Adolescent Brain Cognitive Development (ABCD) Study is a national, longitudinal study
funded by the National Institutes of Health. We are researching whether passive
screen time monitoring applications can be used in research, and in the entirety of the
ABCD study research &amp; build digital tools to improve mental health, especially amongst
underserved groups &amp; young people"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
